generator client {
  provider = "prisma-client-js"
  output   = "./generated/central"
}

datasource db {
  provider = "postgresql"
  url      = env("CENTRAL_DB_URL")
}

model Admin {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String   @default("admin")
  password     String
  hospitalCode String   @default("")
  hospital     Hospital @relation(fields: [hospitalCode], references: [code])
}

model Hospital {
  id       String  @id @default(uuid())
  code     String  @unique
  name     String
  location String
  city     String
  state    String
  dbURL    String
  admin    Admin[]
}

model Patient {
  abhaId           String          @id @unique
  name             String
  contact          String
  address          String
  gender           String
  DOB              String
  emergencyContact String
  medicalRecords   MedicalRecord[]
}

model MedicalRecord {
  id                    String    @id @default(uuid())
  patientId             String
  patient               Patient   @relation(fields: [patientId], references: [abhaId])
  hospitalName          String
  recordDate            DateTime  @default(now())
  visitReason           String
  medicationsPrescribed String
  treatmentSummary      String
  doctorName            String
  followUpInstructions  String?
  documents             Json?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime? @updatedAt
}

model ABHANumber {
  prev String @id
}

model OTPVerification {
  id        String   @id @default(uuid())
  email     String   @unique
  otp       String
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model BedRequest {
  id             String @id @default(uuid())
  hospitalCode   String
  patientAbhaId  String @unique
  patientName    String
  patientContact String
  wardName       String
}
